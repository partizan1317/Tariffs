<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://www.example.com/tariffs"
        xmlns:tns="http://www.example.com/tariffs"
        elementFormDefault="qualified">
        <element name="tariffs">
                <complexType>
                    <sequence>
                        <element name="phone-tariff"
                                 type="tns:PhoneTariff"
                                 minOccurs="2"
                                 maxOccurs="unbounded"/>
                        <element name="home-tariff"
                                 type="tns:HomeTariff"
                                 minOccurs="2"
                                 maxOccurs="unbounded"/>
                    </sequence>
                </complexType>
        </element>
        <complexType name="Tariff">
            <sequence>
                <element name="name" type="string"/>
                <element name="payroll" type="double"/>
            </sequence>
            <attribute name="id" type="positiveInteger" use="required"/>
            <attribute name="operator-type" use="optional" default="A1">
                <simpleType>
                    <restriction base="string">
                        <enumeration value="MTS"/>
                        <enumeration value="A1"/>
                        <enumeration value="LIFE"/>
                    </restriction>
                </simpleType>
            </attribute>
        </complexType>
        <complexType name="PhoneTariff">
            <complexContent>
                <extension base="tns:Tariff">
                    <sequence>
                        <element name="call-minutes" type="positiveInteger"/>
                        <element name="sms-price" type="double"/>
                    </sequence>
                </extension>
            </complexContent>
        </complexType>
        <complexType name="HomeTariff">
            <complexContent>
                <extension base="tns:Tariff">
                    <sequence>
                        <element name="router-type" type="string"/>
                        <element name="internet-speed" type="double"/>
                    </sequence>
                </extension>
            </complexContent>
        </complexType>
</schema>